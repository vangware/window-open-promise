{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2018",
      "ESNext.Array",
      "ESNext.BigInt"
    ],
    "listEmittedFiles": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./cjs",
    "preserveConstEnums": true,
    "strict": true,
    "target": "ES2018"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
