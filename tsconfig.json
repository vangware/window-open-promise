{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2018",
      "esnext.bigint"
    ],
    "listEmittedFiles": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./cjs",
    "preserveConstEnums": true,
    "strict": true,
    "target": "ES2018"
  }
}
